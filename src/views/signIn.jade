doctype html
html
    head
        title= title
        link(rel="stylesheet",href="/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet",href="/stylesheets/signIn.css")
        meta(name="viewport",content="width=device-width,initial-scale=1.0")
    body
        .container
            form.signIn-form(role="form")
                div
                    h2 登录 #{title}
                div
                    input.form-control(type="text",placeholder="邮箱",check-type="mail required")
                    input.form-control(type="password",placeholder="密码",check-type="required",min-length="8")
                div
                    label
                        input(type="checkbox")
                        span 下次自动登录
                div
                    button.btn.btn-lg.btn-primary.btn-block(type="button") 登录
                div
                    a 注册
        script(src="/javascripts/jquery-1.10.2.min.js")
        script(src="/bootstrap/js/bootstrap.min.js")
        script(src="/javascripts/bootstrap3-validation.js")